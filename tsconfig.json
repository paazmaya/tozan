{
  "compilerOptions": {
    "module": "es2020",
    "lib": [
      "es2020"
    ],
    "types": [
      "node"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "lib/*.js",
    "index.js"
  ]
}
