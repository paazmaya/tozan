{
  "compilerOptions": {
    "module": "es2015",
    "lib": [
      "es2020"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
      "lib/*.js",
      "index.js"
  ]
}
